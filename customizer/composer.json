{
    "name": "drevops/customizer",
    "description": "DrevOps Scaffold customizer",
    "type": "composer-plugin",
    "authors": [
        {
            "name": "Alex Skrypnyk",
            "email": "alex@drevops.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/drevops/core-composer-scaffold"
        }
    ],
    "require": {
        "php": ">=8.2",
        "composer-plugin-api": "^2",
        "drupal/core-composer-scaffold": "11.x-dev"
    },
    "require-dev": {
        "composer/composer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "DrevOps\\Composer\\Plugin\\Customizer\\": "src/Composer",
            "DrevOps\\Customizer\\": "src"
        }
    },
    "extra": {
        "class": "DrevOps\\Composer\\Plugin\\Customizer\\DrupalScaffoldIntegrationPlugin"
    }
}
