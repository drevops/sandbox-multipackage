{
    "name": "drevops/scaffold",
    "description": "Drupal project scaffold",
    "authors": [
        {
            "name": "Alex Skrypnyk",
            "email": "alex@drevops.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/drevops/core-composer-scaffold"
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "php": ">=8.2",
        "drupal/core-composer-scaffold": "11.x-dev"
    },
    "require-dev": {
        "composer/composer": "^2.7",
        "dealerdirect/phpcodesniffer-composer-installer": "^1",
        "drupal/coder": "^8.3",
        "helmich/phpunit-json-assert": "^3.5",
        "mikey179/vfsstream": "^1.6",
        "opis/closure": "^3.6",
        "phpmd/phpmd": "^2.13",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10",
        "rector/rector": "^1.0.0",
        "symfony/filesystem": "^7.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScaffoldGeneralizer.php",
            "scripts/composer/ScaffoldScriptHandler.php",
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "DrevOps\\Scaffold\\Tests\\": "tests/phpunit"
        }
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[project-root]/.editorconfig": false,
                "[project-root]/.gitattributes": false,
                "[web-root]/.htaccess": false,
                "[web-root]/.ht.router.php": false,
                "[web-root]/example.gitignore": false,
                "[web-root]/INSTALL.txt": false,
                "[web-root]/README.txt": false,
                "[web-root]/sites/example.settings.local.php": false,
                "[web-root]/sites/example.sites.php": false,
                "[web-root]/web.config": false,
                "[project-root]/.circleci/config.yml": ".circleci/config.yml",
                "[project-root]/myfile1.txt": "myfile1.txt"
            }
        },
        "patches": {}
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true
        }
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion",
            "DrevOps\\composer\\ScaffoldScriptHandler::preUpdateCmd"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-root-package-install": [
            "DrevOps\\composer\\ScaffoldGeneralizer::generalizeAndRemoveItselfAfterProjectCreate"
        ],
        "lint": [
            "cp php-script php-script.php && phpcs && rm php-script.php",
            "phpmd --exclude vendor,vendor-bin,node_modules . text phpmd.xml",
            "phpstan",
            "rector --clear-cache --dry-run"
        ],
        "lint-fix": [
            "rector --clear-cache",
            "cp php-script php-script.php && phpcbf && rm php-script.php"
        ],
        "test": "if [ \"${XDEBUG_MODE}\" = 'coverage' ]; then phpunit; else phpunit --no-coverage; fi"
    }
}
